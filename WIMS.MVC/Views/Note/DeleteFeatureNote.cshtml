@model WIMS.Models.NoteModels.NoteDetail

@{
    ViewData["Title"] = "DeleteFeatureNote";
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
<div class="alert alert-danger" role="alert">
    @ViewBag.ErrorMessage
    <button type="button" class="close" data-dismiss="alert"> X</button>
</div>
}

<div class="card mx-auto note-delete">
    <div class="card-header table-header">
        <h3>Are you sure you want to delete this note?</h3>
    </div>
    <div class="card-body">
        <h4>Note Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NoteId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NoteId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NoteText)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NoteText)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AuthorName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AuthorName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ItemId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ItemId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateCreated)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateCreated)
            </dd>
        </dl>

        <form asp-action="DeleteFeatureNote">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-primary" href="@Url.Action("FeatureItemDetails", "WorkItem", new { id = Model.ItemId  })">
                Return to Item
            </a>

        </form>
    </div>
</div>



