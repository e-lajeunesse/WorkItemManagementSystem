@model WIMS.Models.NoteModels.NoteDetail

@{
    ViewData["Title"] = "DeleteNote";

}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <script type="text/javascript">
        alert("@ViewBag.ErrorMessage");
    </script>
}

<div class="card mx-auto note-delete">
    <div class="card-header table-header">
        <h3>Are you sure you want to delete this note?</h3>
    </div>

    <div class="card-body">
        <h4>Note Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NoteId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NoteId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NoteText)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NoteText)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AuthorName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AuthorName)
            </dd>
        </dl>

        <form asp-action="DeleteBugNote">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-primary" href="@Url.Action("BugItemDetails", "WorkItem", new { id = Model.ItemId  })">Return to Item </a>
            @*            <a class="btn btn-primary mx-1" style="width:auto" asp-action="BugItemDetails" asp-route="@(new {id = itemId})" asp-controller="WorkItem">Back to Item</a>*@
        </form>
    </div>
</div>



