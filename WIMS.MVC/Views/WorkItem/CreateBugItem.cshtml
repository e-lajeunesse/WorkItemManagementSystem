@model WIMS.Models.BugItemModels.BugItemCreate

@{
    ViewData["Title"] = "CreateBugItem";
}

<h1>Add New Bug</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBugItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
