@model WIMS.Models.BugItemModels.BugItemDetail

@{
    ViewData["Title"] = "DeleteBugItem";
}

<div class="card item-delete mx-auto">
    <div class="card-header table-header"><h4>Are you sure you want to delete this item?</h4></div>
    <div class="card-body">
        <h4>Item Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ItemId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ItemId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Type)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Type)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Size)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Size)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateCreated)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateCreated)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DaysPending)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DaysPending)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatorName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatorName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ApplicationUserId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ApplicationUserId)
            </dd>
        </dl>
    </div>
    <div class="card-footer bg-transparent">
        <form asp-action="DeleteBugItem">
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            @if (Model.IsComplete)
            {
                <a class="btn btn-primary" asp-action="ViewCompletedItems">Back to List</a>
            }
            else
            {
                <a class="btn btn-primary" asp-action="Index">Back to List</a>
            }
        </form>
    </div>
</div>




