@model WIMS.Models.WorkItemReassign


@{
    List<SelectListItem> users = ViewBag.users;
    bool isComplete = ViewBag.IsComplete;
}

<div class="card item-reassign">
    <div class="card-header table-header">
        <h4>Select Employee</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <label class="h5" asp-for="ApplicationUserId"></label>
            <select asp-for="ApplicationUserId" asp-items="@users">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="ApplicationUserId"></span>
            <div class="mt-3">
                <input type="submit" value="Confirm" class="btn btn-primary" style="width:auto" />
                @if (isComplete)
                {
                    <a asp-action="ViewCompletedItems">Cancel</a>
                }
                else
                {
                    <a class="btn btn-primary" asp-action="Index">Cancel</a>
                }
            </div>

        </form>
    </div>
</div>






