@model WIMS.Models.UserModels.UserRoleEdit

@{
    ViewData["Title"] = "EditRole";
}



<h1>Edit Role</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole">
           
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">                
                <input asp-for="RoleId" type="hidden" class="form-control" />
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

            <div class="card">
                <div class="card-header">
                    Users
                </div>
                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h4 class="card-title">@user</h4>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">No Users are currently in this role</h5>
                    }
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary mx-1" style="width:auto" asp-controller="User"
                       asp-route-roleId="@Model.RoleId" asp-action="EditUsersInRole">Add or Remove Users</a>
                    
                </div>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
