@model WIMS.Models.UserModels.UserRoleEdit

@{
    ViewData["Title"] = "EditRole";
}



<h3>Edit Role</h3>
<div>
    <a asp-action="GetRoles">Back to List</a>
</div>
<hr />

<div class="row mt-5 d-flex justify-content-center">
    <div class="col-md-4 mr-5">

        <div class="card">
            <div class="card-header h5 table-header">Role Name</div>
            <div class="card-body">
                <form asp-action="EditRole">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="RoleId" type="hidden" class="form-control" />
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @*<label asp-for="RoleName" class="control-label"></label>*@
                        <input asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4 ml-5">
        <div class="card">
            <div class="card-header h5 table-header">
                Users
            </div>
            <div class="card-body">
                @if (Model.Users.Any())
                {
                <ul>
                    @foreach (var user in Model.Users)
                    {
                        <li class="card-title">@user</li>
                    }
                </ul>
                   
                }
                else
                {
                    <h5 class="card-title">No Users are currently in this role</h5>
                }
            </div>
            <div class="card-footer bg-transparent">
                <a class="btn btn-primary mx-1" style="width:auto" asp-controller="User"
                   asp-route-roleId="@Model.RoleId" asp-action="EditUsersInRole">Add or Remove Users</a>
            </div>
        </div>
    </div>


    
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
