@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@*<h1>@ViewData["Title"]</h1>*@

<div class="row mx-auto" id="register">
    <div class="col-5 mx-auto">
        <div class=" text-center mx-auto card">
            <div class="card-header table-header">
                <h4>
                    <i class="far fa-edit"></i>
                    Register Account
                </h4>

            </div>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group px-3">
                    <label class="h5 d-none" asp-for="Input.FullName"></label>
                    <input asp-for="Input.FullName" placeholder="First and Last Name" class="form-control" />
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                <div class="form-group px-3">
                    <label class="h5 d-none" asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" placeholder="Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group px-3">
                    <label class="h5 d-none" asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" placeholder="Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group px-3">
                    <label class="h5 d-none" asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mb-1">Register</button>
            </form>
        </div>

    </div>
   
